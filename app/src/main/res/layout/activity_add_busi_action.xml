<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_register"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <Spinner
            android:id="@+id/busi_act_enum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"/>

        <!--busi_act_id-->
        <EditText
            android:id="@+id/busi_act_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/input_register_bg"
            android:hint="Business ID"
            android:padding="10dp"
            android:inputType="textCapWords"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"/>

        <!--busi_act_start-->
        <EditText
            android:id="@+id/busi_act_start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/input_register_bg"
            android:hint="Business Action Start"
            android:padding="10dp"
            android:inputType="date"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"/>

        <!--busi_act_end-->
        <EditText
            android:id="@+id/busi_act_ends"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/input_register_bg"
            android:hint="Business Action End"
            android:padding="10dp"
            android:inputType="date"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"/>

        <!--busi_act_type-->
        <EditText
            android:id="@+id/busi_act_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/input_register_bg"
            android:hint="Business Action Type"
            android:padding="10dp"
            android:inputType="textCapWords"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"/>

        <!--busi_act_price-->
        <EditText
            android:id="@+id/busi_act_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/input_register_bg"
            android:hint="Business Action Price"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />

        <!--busi_act_state-->
        <EditText
            android:id="@+id/busi_act_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/input_register_bg"
            android:inputType="textCapWords"
            android:hint="Business Action State"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />

        <!--busi_act_description-->
        <EditText
            android:id="@+id/busi_act_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/input_register_bg"
            android:inputType="textCapWords"
            android:hint="Business Action Description"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnAddBusinessAction"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="#ea4c88"
            android:text="@string/btn_add_business_action"
            android:textColor="@color/white" />

        <!-- Link to Login Screen -->

        <!--Button
            android:id="@+id/btnGoBack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="@null"
            android:text="Go Back"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" /-->
    </LinearLayout>
</LinearLayout>